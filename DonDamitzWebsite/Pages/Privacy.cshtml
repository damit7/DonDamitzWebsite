        color: #2c3e50;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 0.5rem;
    }

    section h3 {
        color: #495057;
    }

    section ul {
        line-height: 1.8;
    }

    .card {
        border-radius: 0.5rem;
    }

